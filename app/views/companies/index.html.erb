<h3>All Companies</h3>

<% @companies.each do |company| %>
  <ul class=company_<%= company.id %>>
    <h3><strong><%= link_to company.name, company_path(company) %><br></strong></h3>
    <%= link_to "Edit", edit_company_path(company), class: "btn btn-warning" %>
    <%= link_to "Delete", company_path(company), method: "delete", class: "btn btn-danger" %>
  </ul>
<% end %>
